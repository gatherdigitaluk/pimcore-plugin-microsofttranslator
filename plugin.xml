<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
    <plugin>
        <pluginName>MicrosoftTranslator</pluginName>
        <pluginDescription>Provides automatic translation of any text via the Microsoft translation API</pluginDescription>
        <pluginNiceName>Microsoft Translator</pluginNiceName>

        <pluginVersion>2.0.0</pluginVersion>
        <pluginRevision>2</pluginRevision>

        <!-- put in the URL for the plugin configuration eg. /plugin/SearchRestaurants/admin/index -->
        <pluginIframeSrc />

        <pluginIcon>/plugins/MicrosoftTranslator/static/img/logo_microsofttranslator.png</pluginIcon>
        <pluginServer>thirdpartyplugins.pimcore.org</pluginServer>

        <pluginClassName>MicrosoftTranslator\Plugin</pluginClassName>
        <pluginIncludePaths>
            <path>/MicrosoftTranslator/lib</path>
            <path>/MicrosoftTranslator/controllers</path>
            <path>/MicrosoftTranslator/models</path>
        </pluginIncludePaths>
        <pluginNamespaces>
            <namespace>MicrosoftTranslator</namespace>
        </pluginNamespaces>
        <pluginJsPaths>
            <path>/MicrosoftTranslator/static/js/settings.js</path>
        </pluginJsPaths>
    </plugin>
</zend-config>